@model PojisteniWebApp.Models.IndividualContract

@{
    ViewData["Title"] = "Edit";
}

<h1>Upravit</h1>

<h4>
    @ViewBag.InsuranceType.Title pro
    <a class="btn btn-info my-1" href="/InsuredPersons/Details/@ViewBag.InsuredPerson.Id">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search me-1" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
        </svg>@ViewBag.InsuredPerson.FirstName @ViewBag.InsuredPerson.LastName
    </a>
</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="row">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InsuranceTypeId" class="control-label"></label>
                    <select asp-for="InsuranceTypeId" class="form-control" asp-items="ViewBag.InsuranceTypeId"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label  asp-for="Value" class="control-label"></label>
                    <input type="number" asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="SubjectOfInsurance" class="control-label"></label>
                    <input asp-for="SubjectOfInsurance" class="form-control" />
                    <span asp-validation-for="SubjectOfInsurance" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="FromDate" class="control-label"></label>
                    <input asp-for="FromDate" class="form-control" />
                    <span asp-validation-for="FromDate" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="ToDate" class="control-label"></label>
                    <input asp-for="ToDate" class="form-control" />
                    <span asp-validation-for="ToDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="InsuredPersonId" value="@ViewBag.InsuredPerson.Id" />
            </div>
            <div class="form-group row my-3">
                <div class="col-6">
                    <input type="submit" value="Upravit" class="btn btn-warning my-1" />

                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-secondary my-1" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace me-1" viewBox="0 0 16 16">
                            <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z" />
                            <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z" />
                        </svg>Zpátky na seznam
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

